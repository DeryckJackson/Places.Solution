<div class="container">
  <h1 class="jumbrotron">Places You've Been</h1>
  @using Places.Models;

  @if (Model.Count == 0)
  {
    <p>There are no places yet.</p>
  }
  <ul>
    @foreach (Place place in Model)
    {
      <li><a href='/places/@place.Id'>@place.GetCityName()</a></li>
    }
  </ul>

  <a href="/places/new">Add a new place.</a>

  <form action="/places/delete" method="post">
    <button type="submit" name="button">Clear All Items</button>
  </form>
</div>