@using Places.Models;

<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li>@place.GetCityName()</li>
    <li>@place.GetStayLength()</li>
    <li>@place.GetJournalEntry()</li><br>
  }
</ul>

<a href="/items/new">Add a new item.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>